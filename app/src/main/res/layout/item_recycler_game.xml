<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:weightSum="10">

    <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp" app:srcCompat="@mipmap/ic_launcher" android:id="@+id/imgCoverDetails"
            android:layout_margin="12dp" android:layout_weight="1"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/txtName" android:layout_weight="9"
            tools:text="The Legend of Zelda: Ocarina of Time" android:gravity="center_vertical" android:maxLines="2"
            android:paddingLeft="12dp" android:paddingRight="12dp"/>
</LinearLayout>